# PostgreSQL Configuration
POSTGRES_IMAGE=postgres:17.6-alpine
POSTGRES_CONTAINER_NAME=smartdine-postgres
POSTGRES_DB=smartDine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_PORT=5432
PGDATA=/var/lib/postgresql/data/pgdata

# Spring Boot Application Configuration
APP_PORT=8080
APP_HTTPS_PORT=8443
SPRING_APPLICATION_NAME=smartDine

# Database Connection (for Spring Boot)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/smartDine
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Security Configuration
SECURITY_JWT_SECRET_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY_HERE
SECURITY_JWT_EXPIRATION_TIME=3600000

# SSL Configuration
SSL_KEY_STORE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartdine-s3-bucket
